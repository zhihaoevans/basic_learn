{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",  
            "type": "shell", 
            "command": "gcc", 
            "args": [
                "'-Wall'",
                "-g", 
                "'${file}'",
                "-o", 
                "'${fileBasenameNoExtension}'"
            ],

            "group": { 
                "kind": "build",
                "isDefault": true   
            },
            "problemMatcher": [
                "$gcc" 
            ]
        }
    ]
}